<!-- Form zum Anlegen von Nutzern im Backend -->

<%= form_for user, remote: true, namespace: 'new', html: {autocomplete: 'off'} do |f| %>

  <%= render 'users/form/email', f: f, user: user, readOnly: false %>

  <%= render 'users/form/type', f: f,  user: user, readOnly: false, label: 'Typ' %>

  <%= render 'users/form/state', f: f, label: 'Bundesland' %>

  <%= button_tag class: 'btn btn-outline-success' do %>
    <i class='fas fa-plus'></i> Anlegen
  <% end %>

<% end %>