<%= form_for user, remote: true, authenticity_token: true do |f| %>
  <div class="form-group">
    <label for="email">E-Mail Adresse</label>
    <%= f.email_field :email, id: "email", class: "form-control"%>
    <div class="invalid-feedback">
      Darf nicht leer und noch nicht registriert sein!   <!-- TODO: Aufteilung nach Situation? -->
    </div>
  </div>
  <div class="form-group">
    <div class="form-check form-check-inline">
      <label class="form-check-label">Ich bin...</label>
    </div>
    <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :account_type, 0, class: "custom-control-input"%>
      <%= f.label :account_type, "Lehrkraft", value: 0, class: "custom-control-label" %>
    </div>
    <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :account_type, 1, class: "custom-control-input" %>
      <%= f.label :account_type, "Forscher", value: 1, class: "custom-control-label" %>
    </div>
    <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :account_type, 2, class: "custom-control-input" %>
      <%= f.label :account_type, "Privatperson", value: 2, class: "custom-control-label" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label "Aus...", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select(:state, federal_states, {}, {class: "custom-select"}) %>
    </div>
  </div>
  <%= f.submit 'Registrieren', class: "btn btn-outline-success"%>
  <button class="btn btn-outline-secondary" onclick="$('#modal').modal('hide');return false;">Abbrechen</button>
<% end %>