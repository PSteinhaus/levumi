<% content_for :title do%>
  Schüleransicht <%= @student.name%>
<% end %>

<style type="text/css">
  td{
    font-size: 10px;
  }
  th, b{
    font-size: 10px;
  }
  thead { display: table-header-group }
  tfoot { display: table-row-group }
  tr { page-break-inside: avoid }



  .panel {page-break-after:auto}

  .c3-line-student {
    stroke-width: 3px;
  }
  .c3-line-n25, .c3-line-n50, .c3-line-n75 {
    stroke-dasharray: 10,10;
  }
  .c3-axis {
    font-size: 8.5pt;
  }

</style>

<!--TODO hier müssen immer die richtigen Sachen gerendert werden-->
<% @results.each do |key, val| %>
    <%= render partial: 'students/overview', formats: ['html'], locals: {:key => key, :val => val, :online => false, :without_table => params.has_key?(:without_table)}%>
<% end %>

<script>
  <% @results.each do |key, val| %>
    <% test = Test.find(key) %>
    <%= render file: 'tests/generic_views/standard/_student_draw_graph.js.erb', locals: {:student => @student, :test => test.id, :results => val}%>
  <% end %>
</script>

