<% content_for :title do%>
  Sch√ºleransicht <%= @student.name%>
<% end %>

<style type="text/css">
  td{
    font-size: 10px;
  }
  th, b{
    font-size: 10px;
  }
  thead { display: table-header-group }
  tfoot { display: table-row-group }
  tr { page-break-inside: avoid }



  .panel {
    page-break-after:auto;
    page-break-inside:avoid
  }

  .c3-line-student {
    stroke-width: 3px;
  }
  .c3-line-n25, .c3-line-n50, .c3-line-n75 {
    stroke-dasharray: 10,10;
  }
  .c3-axis {
    font-size: 8.5pt;
  }

</style>

<% @results.each do |key, val| %>

    <%= render partial: 'students/overview', formats: ['html'], locals: {:key => key, :val => val, :online => false, :without_table => params.has_key?(:without_table)}%>
<% end %>

<script>
  <% @results.each do |key, val| %>
    <% test = Test.find(key) %>
    <%if test.generic_views["student_upperPart"].nil? || test.generic_views["student_upperPart"].blank?%>
      <%= render file: 'tests/generic_views/standard/student_draw_graph.js.erb', locals: {:student => @student, :test => test.id, :results => val}%>
    <%else%>
      <%= render file: 'tests/generic_views/' + test.generic_views["student_upperPart"], locals: {:student => @student, :test => test.id, :results => val}%>
    <%end%>
  <% end %>
</script>

