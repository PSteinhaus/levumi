<div class="jumbotron">
  <h1><%= image_tag('Levumi-klein-blau.png', size: "120")%> Levumi  </h1>
  <h3>Lernverlaufs-Monitoring</h3>
  <br/>
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            Ich bin Lehrkraft
          </a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <%= form_tag(url_for(:controller => 'application', :action => 'signup'), :class => "form") do %>
              <div class="row">
                <div class="col-xs-5">
                  <div class="form-group">
                    <label class="sr-only" for="email">Email-Adresse</label>
                    <%= text_field_tag "email", nil, type: "email", class: "form-control", placeholder: "E-Mail Adresse"%>
                  </div>
                </div>
                <div class="col-xs-4">
                  <div class="form-group">
                    <label class="sr-only" for="school">Tätigkeit</label>
                    <%= select_tag("occupation", options_for_select(occupation), {prompt: "Tätigkeit...", class: "form-control"}) %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-5">
                  <div class="form-group">
                    <label class="sr-only" for="email">Name</label>
                    <%= text_field_tag "name", nil, type: "text", class: "form-control", placeholder: "Name"%>
                  </div>
                </div>
                <div class="col-xs-4">
                  <div class="form-group">
                    <label class="sr-only" for="state">Bundesland</label>
                    <%= select_tag("state", options_for_select(federal_states), {prompt: "Bundesland", class: "form-control"}) %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-5">
                  <div class="form-group">
                    <label class="sr-only" for="school">Schule</label>
                    <%= text_field_tag "school", nil, type: "text", class: "form-control", placeholder: "Schule" %>
                  </div>
                </div>
                <div class="col-xs-4">
                  <%= hidden_field_tag("account_type", "0")%>
                  <%= submit_tag 'Registrieren', :class => "btn btn-primary" %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingTwo">
        <h4 class="panel-title">
          <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            Ich bin Forscher_in
          </a>
        </h4>
      </div>
      <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
        <div class="panel-body">
          <%= form_tag(url_for(:controller => 'application', :action => 'signup'), :class => "form") do %>
              <div class="row">
                <div class="col-xs-5">
                  <div class="form-group">
                    <label class="sr-only" for="email">Email-Adresse</label>
                    <%= text_field_tag "email", nil, type: "email", class: "form-control", placeholder: "E-Mail Adresse"%>
                  </div>
                </div>
                <div class="col-xs-4">
                  <div class="form-group">
                    <label class="sr-only" for="state">Bundesland</label>
                    <%= select_tag("state", options_for_select(federal_states), {prompt: "Bundesland", class: "form-control"}) %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-5">
                  <div class="form-group">
                    <label class="sr-only" for="email">Name</label>
                    <%= text_field_tag "name", nil, type: "text", class: "form-control", placeholder: "Name"%>
                  </div>
                </div>
                <div class="col-xs-4">
                </div>
              </div>
              <div class="row">
                <div class="col-xs-5">
                  <div class="form-group">
                    <label class="sr-only" for="school">Institution</label>
                    <%= text_field_tag "school", nil, type: "text", class: "form-control", placeholder: "Institution" %>
                  </div>
                </div>
                <div class="col-xs-4">
                  <%= hidden_field_tag("account_type", "1")%>
                  <%= submit_tag 'Registrieren', :class => "btn btn-primary" %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingThree">
        <h4 class="panel-title">
          <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            Ich bin Elternteil/Privatperson
          </a>
        </h4>
      </div>
      <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
        <div class="panel-body">
          <%= form_tag(url_for(:controller => 'application', :action => 'signup'), :class => "form") do %>
              <div class="row">
                <div class="col-xs-5">
                  <div class="form-group">
                    <label class="sr-only" for="email">Email-Adresse</label>
                    <%= text_field_tag "email", nil, type: "email", class: "form-control", placeholder: "E-Mail Adresse"%>
