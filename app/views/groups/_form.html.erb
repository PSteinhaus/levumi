<%= form_for @group, class: "form-inline" do |f| %>
  <div class="form-group row">
    <div class="col-md-3">
      <label for="iName" class="sr-only">Klassenbezeichner</label>
      <%= f.text_field :label, class: "form-control", id: "iName", placeholder: "Klassenbezeichner" %>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Anlegen</button>
    </div>
  </div>
<% end %>