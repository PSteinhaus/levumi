<!DOCTYPE html>
<html>
  <head>
    <title>Levumi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>

    <!-- sonstige Libaries -->
    <%= javascript_include_tag 'sjcl.js' %>

    <%= render 'layouts/scripts' %>

    <%= yield :head if content_for? :head %>
  </head>

  <body>
  <!-- Platz für Navbar -->
  <% if content_for? :navbar %>
    <%= yield :navbar %>
  <% else %>
    <%= render 'layouts/navbar' %>
  <% end %>

  <!-- Hauptinhalt der Seite -->
  <%= content_for?(:body) ? yield(:body) : yield %>

  <!-- Platz für Dialoge etc -->
  <div id='modal' class='modal fade' tabindex='-1'>
    <div class='modal-dialog'>
      <div class='modal-content'>
        <% if content_for? :modal %>
          <%= yield :modal %>
        <% else %>
          <div class='modal-body' id='modal-body'>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Platz für Inline Hilfe -->
  <div id='help' class='m-5 collapse' style="position:fixed;bottom:0px;right:0px;">
    <div class='card'>
      <div class='card-header'><strong>Hilfe und Hinweise</strong></div>
      <div id='help_text' class='card-body'>
        <p class='card-text'>...</p>
      </div>
    </div>
  </div>

  <%= render 'application/imprint' %>
  <%= render 'application/privacy' %>

  </body>
</html>
